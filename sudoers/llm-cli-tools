# Common package management and system commands
kkk ALL=(ALL) NOPASSWD: /usr/bin/apt, /usr/bin/apt-get, /usr/bin/dpkg, /usr/bin/snap

# Docker and container management
kkk ALL=(ALL) NOPASSWD: /usr/bin/docker, /usr/bin/docker-compose

# System services
kkk ALL=(ALL) NOPASSWD: /usr/bin/systemctl, /bin/systemctl

# User and group management
kkk ALL=(ALL) NOPASSWD: /usr/sbin/usermod, /usr/sbin/groupadd

# File system operations
kkk ALL=(ALL) NOPASSWD: /usr/bin/install, /usr/bin/mkdir, /usr/bin/chmod, /usr/bin/chown, /usr/bin/tee

# Network and downloads
kkk ALL=(ALL) NOPASSWD: /usr/bin/curl, /usr/bin/wget

